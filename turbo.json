{
    "$schema": "https://turborepo.dev/schema.json",
    "globalEnv": [
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_SECRET_KEY"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
                "STRIPE_SECRET_KEY"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {}
    }
}